<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GestorTareas.Prism.Views.ChangePassword"
             BackgroundColor="#F7F7F7">
    
    <NavigationPage.TitleView>
        <Image Source="formato_vertical_pleca.jpg" Aspect="Fill"></Image>
    </NavigationPage.TitleView>

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center" WidthRequest="280">

        <Label Text="Introduce la nueva contraseña:" TextColor="black" Margin="0,20,0,0"/>
        <Entry BackgroundColor="White" TextColor="Black"></Entry>

        <Label Text="Vuelve a introducir la nueva contraseña:" TextColor="black" Margin="0,20,0,0"/>
        <Entry BackgroundColor="White" TextColor="Black"></Entry>


        <Button Text="Confirmar" BackgroundColor="#1873C8" Margin="0,300,0,0"></Button>

    </StackLayout>

</ContentPage>