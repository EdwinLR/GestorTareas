<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestorTareas.Prism.Views.Login"
             BackgroundColor="#F7F7F7">
    <NavigationPage.TitleView>
        <Image Source="formato_vertical_pleca.jpg" Aspect="Fill"></Image>
    </NavigationPage.TitleView>
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Start" WidthRequest="280">
        <Image Source="LOGO_UMAD.png" WidthRequest="200" Margin="10,80,0,0"></Image>
        <Label Text="Email" TextColor="black" Margin="0,10,0,0"/>
        <Entry Keyboard="Email" BackgroundColor="White" TextColor="black"/>

        <Label Text="Contraseña" TextColor="black" Margin="0,20,0,0"/>
        <Entry IsPassword="True" BackgroundColor="White" TextColor="black" />

        <Button Text="Ingresar" BackgroundColor="#1873C8" Margin="0,25,0,0"></Button>

    </StackLayout>

</ContentPage>