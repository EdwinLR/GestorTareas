<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="GestorTareas.Prism.Views.ActivityDetail"
             BackgroundColor="#F7F7F7">

    <NavigationPage.TitleView>
        <Image Source="formato_vertical_pleca.jpg" Aspect="Fill"/>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="Fill" Margin="30,50,30,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Column="0" 
                           Grid.Row="0"
                           Text="Titulo de la Tarea:"
                           FontSize="Small"
                           TextColor="black"/>

                    <Label Grid.Column="0" 
                           Grid.ColumnSpan="2"
                           Grid.Row="1" 
                           Text="Limpiar anaqueles de Soporte Técnico"
                           FontSize="Medium"
                           TextColor="black"/>

                    <Label Grid.Column="0" 
                           Grid.Row="2" 
                           Text="Descripción Corta:"
                           FontSize="Small"
                           TextColor="black"/>

                    <Label Grid.Column="0" 
                           Grid.ColumnSpan="2"
                           Grid.Row="3" 
                           Text="Acudir al área de Soporte Tecnico y realizar la limpieza de los anaqueles del almacen alli ubicados."
                           FontSize="Medium"
                           TextColor="black"/>

                    <Label Grid.Column="0" 
                           Grid.Row="4" 
                           Text="Fecha Limite:"
                           FontSize="Small"
                           TextColor="black"/>

                    <Label Grid.Column="1" 
                           Grid.Row="4" 
                           Text="09/11/2022"
                           FontSize="Medium"
                           TextColor="black"/>

                    <Label Grid.Column="0" 
                           Grid.Row="5" 
                           Text="Hora Limite:"
                           FontSize="Small"
                           TextColor="black"/>

                    <Label Grid.Column="1" 
                           Grid.Row="5" 
                           Text="08:00 am"
                           FontSize="Medium"
                           TextColor="black"/>

                    <Label Grid.Column="0" 
                           Grid.Row="6" 
                           Text="Tipo de Tarea:"
                           FontSize="Small"
                           TextColor="black"/>

                    <Label Grid.Column="1" 
                           Grid.Row="6" 
                           Text="Urgente"
                           FontSize="Medium"
                           TextColor="black"/>
                </Grid>

                <Button Text="📎   Adjuntar evidencia" BackgroundColor="#EE0B28" Margin="20,20,20,0"/>

                <Grid Padding="30,20,30,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <Image Source="image.png"
                           Grid.Column="0" 
                           Grid.Row="0"/>

                    <Label Grid.Column="0" 
                           Grid.Row="1" 
                           Text="Imagen.png"
                           FontSize="Small"
                           HorizontalTextAlignment="Center"
                           TextColor="black"/>

                    <Image Source="image.png"
                           Grid.Column="1" 
                           Grid.Row="0"/>

                    <Label Grid.Column="1" 
                           Grid.Row="1" 
                           Text="Documento.pdf"
                           FontSize="Small"
                           HorizontalTextAlignment="Center"
                           TextColor="black"/>

                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>