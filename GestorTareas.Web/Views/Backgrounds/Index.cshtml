@model IEnumerable<GestorTareas.Web.Data.Entities.Background>

@{
    ViewData["Title"] = "Imágenes de Fondo";
}

<link href="~/css/estilo-home.css" type="text/css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/style-icon.css" />

<h1>Imágenes de Fondo</h1>

<p>
    <a asp-action="AddNewBackgroundPicture"class="btn btn-outline-success">
        <span class="icon-plus"></span> Nueva Imagen de Fondo
    </a>
</p>
<table class="table" style="text-align:center;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th scope="col">
                <a>Establecer como fondo</a>
            </th>
            <th>
                <a>Editar</a>
            </th>
            <th>
                <a>Eliminar</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoUrl))
                    {
                        <img src="@Url.Content(item.PhotoUrl)" style="width:250px; height:auto;" />
                    }
                </td>
                    @if(item.EstablishedPicture)
                    {
                        <td>
                            <input class="form-check-input" type="radio" checked/>
                        </td>
                    }
                    else
                    { 
                        <td>
                            <input class="form-control" type="radio"/>
                        </td>
                    }
                    <td> 
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                        <span class="icon-pencil"></span></a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <span class="icon-cancel-circle"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
