        <dd class="col-sm-10">
            @Html.DisplayFor(model => startingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => endingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Requirements)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Requirements)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prizes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prizes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConvocationUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConvocationUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Institute.Name)
