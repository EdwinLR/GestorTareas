@model GestorTareas.Web.Models.AddStudentViewModel

@{
    ViewData["Title"] = "Agregar persona de contacto";
}

<link rel="stylesheet" href="~/css/style-icon.css" />
<link rel="stylesheet" href="~/css/estiloPaginas.css" />

<h1>Agregar estudiante</h1>
<br />

<h4>Estudiantes Asignados</h4>
<table class="table" style="text-align:center;">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th scope="col">
                <a>Eliminar</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AssignedStudents)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.User.FullName)
                </td>
                <td>
                    <a asp-action="DeleteStudent" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <span class="icon-cancel-circle"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" asp-items="Model.StudentsList" class="form-control"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-outline-success" /> |
                <a asp-action="Create" class="btn btn-outline-secondary">
                    <span class="icon-undo2"></span> Regresar
                </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
