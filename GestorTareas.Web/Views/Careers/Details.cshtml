@model IEnumerable<GestorTareas.Web.Data.Entities.Student>

@{
    ViewData["Title"] = "Alumnos Inscritos";
}

<link href="~/css/estilo-home.css" type="text/css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/style-icon.css" />

<h1>Alumnos Inscritos</h1>
<div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <span class="icon-undo2"></span>  Regresar a la lista
    </a>
</div>
<br />
<table class="table" style="text-align:center;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
            </tr>
        }
    </tbody>
</table>
