@model IEnumerable<GestorTareas.Web.Data.Entities.ContactPerson>

@{
    ViewData["Title"] = "Personas de Contacto";
}

<link href="~/css/estilo-home.css" type="text/css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/style-icon.css" />

<h1>Personas de Contacto</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">
        <span class="icon-plus"></span> Nueva Persona de Contacto</a>
</p>
<table class="table" style="text-align:center;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                <a>Editar</a>
            </th>
            <th>
                <a>Eliminar</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                        <span class="icon-pencil"></span>
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <span class="icon-cancel-circle"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>