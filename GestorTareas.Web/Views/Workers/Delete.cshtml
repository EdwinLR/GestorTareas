@model GestorTareas.Web.Data.Entities.Worker

@{
    ViewData["Title"] = "Eliminar trabajador";
}

<link rel="stylesheet" href="~/css/style-icon.css" />
<link rel="stylesheet" href="~/css/estiloPaginas.css" />

<h1>Eliminar trabajador</h1>

<h3>¿Está seguro que quieres eliminar a este trabajador?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PhotoUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.User.PhotoUrl))
            {
                <img src="@Url.Content(Model.User.PhotoUrl)" style="width:300px; height:auto;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">
            <span class="icon-undo2"></span>  Regresar a la lista</a>
    </form>
</div>

