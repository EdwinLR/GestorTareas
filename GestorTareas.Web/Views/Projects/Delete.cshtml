@model GestorTareas.Web.Data.Entities.Project

@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<link rel="stylesheet" href="~/css/style-icon.css" />
<link rel="stylesheet" href="~/css/estiloPaginas.css" />

<h1>Eliminar Proyecto</h1>

<h3>¿Está seguro que quieres eliminar este proyecto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            Convocatoria Relacionada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Convocation.Summary)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">
            <span class="icon-undo2"></span>  Regresar a la lista</a>
    </form>
</div>

